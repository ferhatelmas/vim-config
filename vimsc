" Save with CTRL+S
" Add this to your .zshrc to avoid the terminal controling ctrl+s for vim
" # VIM Control flow for CTRL+S
" alias vim="stty stop '' -ixoff ; vim"
" # `Frozing' tty, so after any command terminal settings will be restored
" ttyctl -f
function! SaveCTRLS()
  if &modified
    confirm write
  endif
endfunction
nnoremap <silent> <C-S> :call SaveCTRLS()<CR>
vnoremap <silent> <C-S> :call SaveCTRLS()<CR>
inoremap <silent> <C-S> <ESC>:call SaveCTRLS()<CR>a


" The <Leader> map
let mapleader=","

nmap <Leader>e :Errors<CR>

" Redo
noremap <S-u> <C-r>
noremap <C-u> <C-r>

" Split
noremap <Leader>h :<C-u>split<CR>
noremap <Leader>v :<C-u>vsplit<CR>

"" Copy/Paste/Cut
noremap YY "+y<CR>
noremap PP "+gP<CR>
noremap XX "+x<CR>

" Select a word
nnoremap " *``

" Selecting with SHIFT
nmap <S-Up>    v<Up>
nmap <S-Down>  v<Down>
nmap <S-Left>  v<Left>
nmap <S-Right> v<Right>
vmap <S-Up>    <Up>
vmap <S-Down>  <Down>
vmap <S-Left>  <Left>
vmap <S-Right> <Right>

" Moving faster
map <C-Up> <Up><Up><Up><Up>
map <C-Down> <Down><Down><Down><Down>

" Tab navigation
noremap <C-A-Left>   :tabprevious<CR>
noremap <C-A-Right>  :tabnext<CR>
inoremap <C-A-Left>  <Esc>:tabprevious<CR>i
inoremap <C-A-Right> <Esc>:tabnext<CR>i

" Navigation in splits
nmap <silent> <A-Up> <C-w>k
nmap <silent> <A-Down> <C-w>j
nmap <silent> <A-Left> <C-w>h
nmap <silent> <A-Right> <C-w>l
imap <silent> <A-Up> <Esc><C-w>ki
imap <silent> <A-Down> <Esc><C-w>ji
imap <silent> <A-Left> <Esc><C-w>hi
imap <silent> <A-Right> <Esc><C-w>li

" Select ALL
map <C-a> GVgg

" Indentation
nmap <Tab> >>
nmap <S-Tab> <<
xmap <Tab> >gv
xmap <S-Tab> <gv


"""""""""""""""
""" PLUGINS """
"""""""""""""""

" EasyAlign
vmap <Enter> <Plug>(EasyAlign)

" Gundo
nnoremap <Leader>u :GundoToggle<CR>

" TComment
map <Leader>c :TComment<CR>

" TagBar
map <Leader>l :Tagbar<CR>

" TaskList: <Leader>t

" UltiSnips
let g:UltiSnipsJumpForwardTrigger="<tab>"
let g:UltiSnipsJumpBackwardTrigger="<c-b>"
let g:UltiSnipsEditSplit="vertical"
let g:UltiSnipsExpandTrigger="<NL>" " <C-Enter>
